<Styles xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:IronyModManager.Controls.ClientSideDecorations;assembly=IronyModManager">

    <Style Selector="controls|IronyResizeBorder">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel x:Name="PART_Container"
                       HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                       VerticalAlignment="{TemplateBinding VerticalAlignment}"
                       Width="{TemplateBinding Width}"
                       Height="{TemplateBinding Height}">
                    <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Transparent" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
